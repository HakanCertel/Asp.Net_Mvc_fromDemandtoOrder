@model UserDetailModel

<h1>Edit User</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Admin" asp-action="UserEdit" method="POST" >
            <div class="row">
                <div class="col-md-8">
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div class="form-group">
                        <label asp-for="UserName"></label>
                        <input asp-for="UserName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>

                </div>
                <div class="col-md-4">
                    <br />
                    @foreach (var roleName in ViewBag.Roles)
                    {
                        <div class="form-check">
                            <input type="checkbox"
                                   class="form-check-input"
                                   name="selectedRoles"
                                   value="@roleName"
                                   id="@roleName"
                                   @(Model.SelectedRoles.Any(x => x == roleName) ? "checked" : "")>
                            <label class="form-check-label" for="@roleName">@roleName</label>
                        </div>
                    }
                    <hr />
                    <div class="form-check">
                        <input type="checkbox" asp-for="EmailConfirmed" class="form-check-input" />
                        <label class="form-check-label" asp-for="EmailConfirmed"></label>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>